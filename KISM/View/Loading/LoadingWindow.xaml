<Window x:Class="KISM.View.Loading.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KISM.View.Loading"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="LoadingWindow"
        WindowStartupLocation="CenterScreen" Margin="20,0,20,0"
        WindowStyle="None" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" Background="#FFF1F2F3"
        Loaded="Window_Loaded"
        >
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,20,0">
        <Image gif:ImageBehavior.AnimatedSource="/Resource/Gif/Loading.gif" Height="100" Width="100"/>
        <TextBlock x:Name="LoadingMessage" Text="Loading" Foreground="Black" FontSize="30" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <!--<MediaElement x:Name="LoadingMedia" Source="/Resource/Gif/Loading.gif" UnloadedBehavior="Manual" Stretch="Fill" Volume="0"/>-->
    </StackPanel>
</Window>
